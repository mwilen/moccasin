{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "target": "es5",
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": false,
        "lib": [
            "es2015",
            "dom",
            "es6",
        ],
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/**/*"
    ],
}